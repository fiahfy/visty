{
  "name": "visty",
  "description": "Simple Video Player based on Electron.",
  "version": "0.0.2",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fiahfy/electron-context-menu": "^0.1.0",
    "@fiahfy/electron-traffic-light": "^0.0.1",
    "@fiahfy/electron-window": "^0.0.2",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.16",
    "@mui/material": "^5.14.16",
    "@reduxjs/toolkit": "^1.9.7",
    "mime": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@fiahfy/eslint-config-react": "^0.0.21",
    "@fiahfy/prettier-config": "^0.0.3",
    "@types/mime": "^3.0.3",
    "@types/react": "^18.2.34",
    "@types/react-dom": "^18.2.14",
    "@types/react-redux": "^7.1.28",
    "@vitejs/plugin-react": "^4.1.1",
    "audio-extensions": "^0.0.0",
    "electron": "^27.0.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.53.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "video-extensions": "^1.2.0",
    "vite": "^4.5.0",
    "vite-plugin-electron": "^0.14.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "main": "dist-electron/main.js",
  "private": true,
  "productName": "Visty",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "format": "prettier -c --ignore-path .gitignore .",
    "lint": "eslint --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "package": "electron-builder",
    "package-dir": "npm run package -- --dir",
    "prepare": "husky install",
    "release": "electron-builder",
    "test": "npm run format && npm run lint && npm run type-check",
    "type-check": "tsc"
  },
  "workspaces": [
    "packages/*"
  ]
}
